pipeline {
  agent any
  tools {
    jdk 'jdk17'
    maven 'mvn'
  }
  environment {
    SCANNER_HOME = tool 'sonar-scanner'
  }
  stages {
    stage ('clear ws') {
      steps {
        cleanWs()
      }
    }
    stage ('checkout from git') {
      steps {
        sh " git clone https://github.com/dipanjanr640/Jenkins-Zero-To-Hero.git "
      }      
    }
    stage ('mvn build') {
      steps {
        sh '''
        pwd
        '''
      } 
    }
   
  }
}
